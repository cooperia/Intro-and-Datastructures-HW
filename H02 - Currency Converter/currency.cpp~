#include <iostream>
using namespace std;
int main()
{
int number_of_dollars;
double total_gold;

cout << "Enter the number of dollars you would like to exchange for World of Warcraft gold .\n";
cout << "Then press enter\n";
cin >> number_of_dollars;

total_gold = number_of_dollars * 10000;

cout <<number_of_dollars << " converted to WoW gold\n";
cout << "gives you a total of " <<total_gold << "gold.\n";

return 0;
}